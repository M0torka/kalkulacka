<Window x:Class="kalkulacka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalkulačka" Height="480" Width="360" ResizeMode="CanMinimize"
        Background="{DynamicResource AppBackgroundBrush}">
    <Window.Resources>
        <!-- Application brushes (use DynamicResource so we can swap them in code) -->
        <SolidColorBrush x:Key="AppBackgroundBrush">#FFFFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="AppForegroundBrush">#FF000000</SolidColorBrush>
        <SolidColorBrush x:Key="ButtonBackgroundBrush">#FFF0F0F0</SolidColorBrush>
        <SolidColorBrush x:Key="ButtonForegroundBrush">#FF000000</SolidColorBrush>
        <SolidColorBrush x:Key="DisplayBackgroundBrush">#FFFFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="DisplayForegroundBrush">#FF000000</SolidColorBrush>

        <!-- Global button style to pick up theme brushes -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="8" />
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display row now has two columns: left for Dark Mode button, right for the display -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="DarkModeButton" Content="Dark Mode" Click="DarkMode_Click" Grid.Column="0" VerticalAlignment="Center" />

            <TextBox x:Name="Display"
                     Grid.Column="1"
                     Height="70"
                     FontSize="32"
                     IsReadOnly="True"
                     Text="0"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Right"
                     Padding="10"
                     Background="{DynamicResource DisplayBackgroundBrush}"
                     Foreground="{DynamicResource DisplayForegroundBrush}"/>
        </Grid>

        <!-- Buttons -->
        <UniformGrid Grid.Row="1" Rows="5" Columns="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
            <!-- Row 1 -->
            <Button Content="C" Click="Clear_Click" />
            <Button Content="⌫" Click="Backspace_Click" />
            <Button Content="±" Click="Negate_Click" />
            <Button Content="÷" Click="Operator_Click" Tag="/" />

            <!-- Row 2 -->
            <Button Content="7" Click="Number_Click" />
            <Button Content="8" Click="Number_Click" />
            <Button Content="9" Click="Number_Click" />
            <Button Content="×" Click="Operator_Click" Tag="*" />

            <!-- Row 3 -->
            <Button Content="4" Click="Number_Click" />
            <Button Content="5" Click="Number_Click" />
            <Button Content="6" Click="Number_Click" />
            <Button Content="−" Click="Operator_Click" Tag="-" />

            <!-- Row 4 -->
            <Button Content="1" Click="Number_Click" />
            <Button Content="2" Click="Number_Click" />
            <Button Content="3" Click="Number_Click" />
            <Button Content="+" Click="Operator_Click" Tag="+" />

            <!-- Row 5 -->
            <Button Content="0" Click="Number_Click" Grid.ColumnSpan="2" />
            <Button Content="." Click="Decimal_Click" />
            <Button Content="=" Click="Equals_Click" />
        </UniformGrid>
    </Grid>
</Window>
