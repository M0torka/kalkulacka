<Window x:Class="kalkulacka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalkulačka" Height="480" Width="360" ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <TextBox x:Name="Display"
                 Grid.Row="0"
                 Height="70"
                 FontSize="32"
                 IsReadOnly="True"
                 Text="0"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Right"
                 Margin="0,0,0,10"
                 Padding="10"/>

        <!-- Buttons -->
        <UniformGrid Grid.Row="1" Rows="5" Columns="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
            <!-- Row 1 -->
            <Button Content="C" Click="Clear_Click" FontSize="20" />
            <Button Content="⌫" Click="Backspace_Click" FontSize="20" />
            <Button Content="±" Click="Negate_Click" FontSize="20" />
            <Button Content="÷" Click="Operator_Click" Tag="/" FontSize="20" />

            <!-- Row 2 -->
            <Button Content="7" Click="Number_Click" FontSize="20" />
            <Button Content="8" Click="Number_Click" FontSize="20" />
            <Button Content="9" Click="Number_Click" FontSize="20" />
            <Button Content="×" Click="Operator_Click" Tag="*" FontSize="20" />

            <!-- Row 3 -->
            <Button Content="4" Click="Number_Click" FontSize="20" />
            <Button Content="5" Click="Number_Click" FontSize="20" />
            <Button Content="6" Click="Number_Click" FontSize="20" />
            <Button Content="−" Click="Operator_Click" Tag="-" FontSize="20" />

            <!-- Row 4 -->
            <Button Content="1" Click="Number_Click" FontSize="20" />
            <Button Content="2" Click="Number_Click" FontSize="20" />
            <Button Content="3" Click="Number_Click" FontSize="20" />
            <Button Content="+" Click="Operator_Click" Tag="+" FontSize="20" />

            <!-- Row 5 -->
            <Button Content="0" Click="Number_Click" FontSize="20" Grid.ColumnSpan="2" />
            <Button Content="." Click="Decimal_Click" FontSize="20" />
            <Button Content="=" Click="Equals_Click" FontSize="20" />
        </UniformGrid>
    </Grid>
</Window>
